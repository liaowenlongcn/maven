<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.UserMapper">


    <sql id="findList_where">
      <if test="username!=null and username!=''">
          USERNAME LIKE '%${username}%'
      </if>
    </sql>

    <select id="login"
            parameterType="pojo.bo.user.LoginBo"
            resultType="pojo.vo.UserVo">
        SELECT * FROM USER
        <where>
            USERNAME =#{username} AND  PASSWORD=#{password}
        </where>
    </select>

    <select id="findList"
            parameterType="pojo.bo.UserBo"
            resultType="pojo.vo.UserVo">
          SELECT * FROM USER
          <where>
              <include refid="findList_where"></include>
          </where>
    </select>

    <select id="get"
            parameterType="int"
            resultType="pojo.vo.UserVo">
        SELECT * FROM USER WHERE Id=#{id}
    </select>

    <update id="update" parameterType="pojo.bo.UserBo">
        update user set username=#{userBo.username},age=#{userBo.age},sex=#{userBo.sex},img=#{userBo.img}
        where id=#{userBo.id}
    </update>

</mapper>
