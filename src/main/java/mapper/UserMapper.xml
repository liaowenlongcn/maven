<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.UserMapper">


    <sql id="findList_where">
      <if test="name!=null and name!=''">
          NAME LIKE '%${name}%'
      </if>
    </sql>


    <select id="findList"
            parameterType="pojo.bo.UserBo"
            resultType="pojo.vo.UserVo">
          SELECT * FROM USER
          <where>
              <include refid="findList_where"></include>
          </where>
    </select>

    <select id="get"
            parameterType="int"
            resultType="pojo.vo.UserVo">
        SELECT * FROM USER WHERE Id=#{id}
    </select>

    <update id="update" parameterType="pojo.bo.UserBo">
        update user set name=#{userBo.name},age=#{userBo.age},sex=#{userBo.sex} where id=#{userBo.id}
    </update>

</mapper>
